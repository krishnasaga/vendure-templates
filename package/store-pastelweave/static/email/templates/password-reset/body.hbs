{{> header }}

<div style="padding: 20px; font-family: 'Arial', sans-serif; color: #333;">
    <h2>Password Reset</h2>
    
    <p>
        We received a request to reset your password. If you requested this password reset, please click the button below:
    </p>
    
    <p style="text-align: center; margin: 30px 0;">
        <a href="{{ passwordResetUrl }}?token={{ passwordResetToken }}" style="background-color: #2196F3; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
            Reset Password
        </a>
    </p>
    
    <p>
        If you didn't request a password reset, you can safely ignore this email.
    </p>
    
    <p>
        This link will expire in 2 hours.
    </p>
</div>

{{> footer }}
